# LatencyMonitor Configuration
# Copy this file to .env and configure with your values

# Default Devices (optional)
# Format: "DeviceName1:IP1,DeviceName2:IP2"
# Leave empty for no defaults - you can add devices via the web interface
DEFAULT_DEVICES=

# AI Analysis Server (optional)
# Configure an external AI server for advanced network analysis
# Leave empty to use built-in local analysis
AI_SERVER_URL=

# Logging Server (optional)
# Configure an external logging server for centralized event logging
# Leave empty to disable external logging
LOGGING_SERVER_URL=

# Webhook URL (optional)
# Configure a webhook URL for real-time alerts (Discord, Slack, etc.)
# Leave empty to disable webhook alerts
# Discord webhook format: https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
WEBHOOK_URL=

# Platform URLs (optional)
# Configure URLs for connected platforms to display in the AI sidebar
# Leave empty to hide platform discovery section
PLATFORM_MONITOR_URL=
PLATFORM_LOGS_URL=
PLATFORM_AI_URL=
